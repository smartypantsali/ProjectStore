@model NintendoStore.Models.NintendoEmployee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/ProductsCategories.cshtml";
}

<h2>Are you sure you want to delete this employee?</h2>

<hr />

<div class="form-horizontal">
    <dl>
        <dt>
            @Html.DisplayNameFor(w => w.Name):
        </dt>
        <dd>
            @Html.DisplayFor(w => w.Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input class="btn btn-danger" type="submit" value="Delete Category" />
        <span class="btn btn-default">
            @Html.ActionLink("Cancel", "Index")
        </span>
    }
</div>