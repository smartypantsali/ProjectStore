@model NintendoStore.Models.NintendoProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="active">
        @Html.ActionLink("Products", "Index", "ProductsDisplay")
        
           > @Html.DisplayFor(model => model.ProductName)
    </li>
</ol>

<div class="container">
    <div class="row">
        <div class="col-xs-4 item-photo">
            <img style="max-width:100%; height:400px; width: 450px;" src="@Url.Content(Model.Picture)" />
        </div>
        <div class="col-xs-5" style="border:0px solid gray">  
            
            <h2>@Html.DisplayFor(model => model.ProductName)</h2>
            
            <h4 class="title-price"><small>Great Offer:</small></h4>
            <h2 style="margin-top:0px;">@Html.DisplayFor(model => model.Price)</h2>
            
            <div class="section">
                <h5 class="title-attr" style="margin-top:15px;"><small>Category:</small></h5>
                <div>
                    <div class="attr" style="width:25px;background:#5a5a5a;"></div>
                    <div class="attr" style="width:25px;background:white;"></div>
                </div>
            </div>
            <div class="section" style="padding-bottom:5px;">
                <h5 class="title-attr"><small>@Html.DisplayFor(modelItem => modelItem.NintendoCategory.CategoryName)</small></h5>
                <div>
                    <div class="attr2">&nbsp;</div>
                    <div class="attr2">&nbsp;</div>
                </div>
            </div>
            <div class="section" style="padding-bottom:20px;">
                <h5 class="title-attr"><small>Quantity<strong>(Does not work currently!!)</strong></small></h5>
                <div>
                    <div class="btn-minus"><span class="glyphicon glyphicon-minus"></span></div>
                    <input value="1" />
                    <div class="btn-plus"><span class="glyphicon glyphicon-plus"></span></div>
                </div>
            </div>            
            <div class="section" style="padding-bottom:20px;">                
                @Html.ActionLink("Add To Basket", "Order", "ShoppingCart", new { id = Model.ProductId }, new { @class = "btn btn-success"})                               
            </div>
        </div>

       <br />
        <div class="col-xs-9">
            <div style="width:100%;border:1px solid silver;padding:0px 0px 10px 10px;margin-top:1em;">
                <h2>Product Description</h2>
                <p >                    
                      @Html.DisplayFor(model => model.Description)                    
                </p>
            </div>
        </div>
    </div>
</div>   
    
