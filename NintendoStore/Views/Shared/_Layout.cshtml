<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nintendo Store</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon.ico.png">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="col-xs-12 col-sm-10 col-md-9">
            <img src="~/Images/rsz_nintendoshop.png" class="img-responsive" />
        </div>
        <div>&nbsp;</div>
        <div class="col-xs-12 col-sm-2 col-md-3">
            @{  int n = 0;
                decimal sum = 0;
                if (Session["cart"] != null)
                {
                    List<NintendoStore.Controllers.Item> cart = (List<NintendoStore.Controllers.Item>)Session["cart"];
                    n = cart.Count;
                    sum = cart.Sum(item => item.Product.Price * item.Quantity);
                }
            }
            <a href="@Url.Action("Index", "ShoppingCart")" class="fa fa-shopping-cart btn-lg btn-danger" )>&nbsp; Basket &nbsp; @n </a>
        </div>
    </div>
    <nav class="navbar navbar-default">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "ProductsDisplay")</li>
                    <li>@Html.ActionLink("Our Team", "Index", "EmployeesDisplay")</li>
                    <li>@Html.ActionLink("Services", "Index", "Services")</li>
                    <li>@Html.ActionLink("Contact us", "Index", "ContactUs")</li>
                    <li>@Html.ActionLink("Administrator", "Index", "Categories")</li>
                    <li></li>
                </ul>
            </div><!--navbar-collapse -->
        </div><!--container -->
    </nav><!--navbar -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ali's Nintendo Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>