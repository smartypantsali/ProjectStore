@model NintendoStore.Models.NintendoCategory

@{
    
    Layout = "~/Views/Shared/ProductsCategories.cshtml";
}

<h2>Are you sure you want to delete this category?</h2>

<hr />

<div class="form-horizontal">
    <dl>
        <dt>
            @Html.DisplayNameFor(w => w.CategoryName):
        </dt>
        <dd>
            @Html.DisplayFor(w => w.CategoryName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        <input class="btn btn-danger" type="submit" value="Delete Category" />
                <span class="btn btn-default">
                    @Html.ActionLink("Cancel", "Index")
                </span>
    }
</div>
