@model IEnumerable<NintendoStore.Models.NintendoEmployee>

@{
    ViewBag.Title = "Our Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="my-4" style="text-decoration: underline;"><small>It's Nice to Meet You!</small></h1>
<br />


@foreach (var item in Model)
{

    <div class="col-lg-4 col-md-4 col-sm-6 text-center mb-4">
        <img class="rounded-circle img-fluid d-block mx-auto" style="max-width:100%; height:200px; width: 200px;" src="@Url.Content(item.Profilepic)" alt="">
        <h3>
            @Html.DisplayFor(w => item.Name)
            <small>@Html.DisplayFor(w => item.Position)</small>
        </h3>
        <p>@Html.DisplayFor(w => item.Description)</p>
    </div>

}



